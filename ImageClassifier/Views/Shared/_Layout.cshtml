<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    <style>
        h5 {
            color: slategray !important;
        }

        .navbar {
            border: currentColor;
            border-image: none;
            background-color: rgb(67, 175, 92);
            margin-bottom: 50px
        }

        .main-menu-item {
            font-size: 23px;
            text-decoration: none;
        }

        .image-container {
            -webkit-box-shadow: 2px 2px 2px 2px gainsboro;
            -moz-box-shadow: 2px 2px 2px 2px gainsboro;
            box-shadow: 2px 2px 2px 2px gainsboro;
            margin-bottom: 15px;
            padding: 8px;
        }

        .btn-predict {
            margin-top: 5px;
            width: 80%;
        }

        .navbar-brand {
            color: white !important;
            margin-right: 8px;
        }
        .sub-menu {
            margin-right: 15px;
        }
            .sub-menu a {
                font-size: 16px;
                border: solid 1px white;
                height: 40px;
                margin-top: 5px;
                padding-top: 10px !important;
            }
        #sample-images {
            margin-top: 45px;
        }
        #predictionModal {
            text-align:center;
        }
        #prediction-table  {
            box-shadow: 0 2px 2px 0 rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.2), 0 1px 5px 0 rgba(0,0,0,.12);
            width: 100%;
            color: dimgray;
            margin-top: 8px;
        }
        td{
            padding: 8px;
            border: solid 1px gainsboro;
            text-align:left;
        }
        tr:hover{
            background-color: whitesmoke;
        }
        .bar {
            background: orange;
            padding: 0 0.15rem;
            color: transparent;
        }
        
        .modal {
            position: fixed;
            left: 50% !important;
            top: 50% !important;
            transform: translate(-50%, -50%);
            overflow:hidden;
        }
        .img-thumbnail
        {
            margin-bottom: 0;
        }

      
    </style>
</head>
<body>
    <!-- Navigation -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand main-menu-item" href="/home">Image Classifier</a>
            </div>
            <div class="navbar-collapse collapse">
                <div id="div_options">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="predict active-menu sub-menu" id="predict"><a class="navbar-brand" href="/home">Sample Images</a></li>
                        <li class="sub-menu" id="stats"><a class="navbar-brand " style="" href="javascript:void(0)" onclick="alert('under construction');">Upload Image</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Page Content -->
    <div class="container">
        @RenderBody()
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
